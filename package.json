{
  "name": "@ocash/sdk",
  "version": "0.1.0",
  "description": "OCash ZKP SDK for browser, hybrid and Node runtimes",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    },
    "./browser": {
      "types": "./dist/browser.d.ts",
      "import": "./dist/browser.js",
      "require": "./dist/browser.cjs",
      "default": "./dist/browser.js"
    },
    "./node": {
      "types": "./dist/node.d.ts",
      "import": "./dist/node.js",
      "require": "./dist/node.cjs",
      "default": "./dist/node.js"
    }
  },
  "files": [
    "dist",
    "assets"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "type-check": "tsc --noEmit",
    "build": "pnpm run clean && tsup",
    "build:assets": "node build_wasm_assets.mjs",
    "build:assets:local": "INCLUDE_WASM_EXEC_JS=1 node build_wasm_assets.mjs",
    "dev": "tsup --watch",
    "test": "vitest run",
    "prepublishOnly": "pnpm run build"
  },
  "devDependencies": {
    "@types/node": "^20.16.11",
    "rimraf": "^6.0.1",
    "tsup": "^8.3.5",
    "typescript": "~5.8.3",
    "vitest": "^2.1.4"
  },
  "dependencies": {
    "@noble/ciphers": "1.3.0",
    "@noble/curves": "1.9.6",
    "@noble/hashes": "1.8.0",
    "eventemitter3": "^5.0.1",
    "tweetnacl": "1.0.3",
    "viem": "2.33.2"
  },
  "sideEffects": false,
  "engines": {
    "node": ">=20.19.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.0"
}
